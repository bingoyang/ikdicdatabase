<?xml version="1.0" encoding="UTF-8"?>


<config>

<bean id="user"  >
		<driverClassName value="com.mysql.jdbc.Driver" />
		<url   value="jdbc:mysql://localhost:3306/test" />
		<username   value="root" />
		<password  value="qin" />
		<!-- 最大连接数量 -->
		<maxActive   value="10"/>
		<!-- 最大空闲连接 -->
    	<maxIdle value="8"/>
    	<!-- 最小空闲连接 -->
    	<minIdle   value="2"/>  
    	<!-- 最大超时连接，以毫秒为单位 -->
    	<maxWait   value="1000"/> 
    	<!-- 是否自动回收超时连接 -->
    	<removeAbandoned   value="false"/> 
    	<testOnBorrow  value="true"/> 
    	<!-- 超时时间(以秒数为单位) -->
    	<removeAbandonedTimeout   value="120"/> 
    	<!-- 是否在自动回收超时连接的时候打印连接的超时错误 -->
    	<logAbandoned   value="true"/> 
    	
    	
	</bean>





</config>